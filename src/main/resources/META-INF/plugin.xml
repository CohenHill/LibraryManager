<idea-plugin>
    <id>org.example.librarymanager</id>
    <name>Library Manager</name>
    <version>1.0.0</version>

    <vendor email="example@example.com">Example</vendor>

    <description>
        Plugin providing quickstart insertion for FTC libraries.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action
                id="org.example.librarymanager.ftc.InsertQuickstartAction"
                class="org.example.librarymanager.ftc.InsertQuickstartAction"
                text="Insert Quickstart Code"
                description="Insert FTC library quickstart templates">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>